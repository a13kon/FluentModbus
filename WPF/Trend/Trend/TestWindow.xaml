<Window x:Class="Trend.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trend"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">

    <Grid>
        <DockPanel LastChildFill="True">
            <WrapPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button BorderBrush="White" Background="White" Content="  File  "></Button>
                <Button BorderBrush="White" Background="White" Content="  Edit  "></Button>
                <Button BorderBrush="White" Background="White" Content="  View  "></Button>
                <Button BorderBrush="White" Background="White" Content=" Project "></Button>
            </WrapPanel>
                <Button DockPanel.Dock="Bottom" Background="BlanchedAlmond" Content="Нижняя кнопка" />
            <Button DockPanel.Dock="Right" Background="DarkGreen" Content="Правая кнопка" />
            <Canvas>
                <ToggleButton Canvas.Top="20" Canvas.Left="20">Toggle Button</ToggleButton>
             </Canvas>
        </DockPanel>
    </Grid>

</Window>
